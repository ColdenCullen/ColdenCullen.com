// Reset everything
global-reset()

// Mixin to allow for full sizing
full-size()
    width: 100%
    height: 100%

html, body, .wrap
    full-size()
    overflow: hidden

.content
    @extend .wrap
    background-color: rgb( 39, 40, 34 )
    font-family: 'Open Sans' sans-serif
    padding-top: 51px

@media (min-width: 768px) and (max-width: 1024px)
    .content
        padding-top: 30px

.aligner
    full-size()
    display: flex
    align-items: center;
    justify-content: center;
    
.full-size
    full-size()

// Import page styles
@import 'topbar'
@import 'pages/home'
@import 'pages/about'
@import 'pages/resume'
@import 'pages/projects'
@import 'pages/blog'
